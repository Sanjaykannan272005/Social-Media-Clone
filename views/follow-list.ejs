<%- include('partials/header') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <!-- User profile card -->
            <div class="card mb-4">
                <div class="card-body text-center">
                    <img src="<%= currentUser.avatar || '/images/default-avatar.png' %>" class="rounded-circle mb-3" width="100" height="100" alt="<%= currentUser.username %>">
                    <h5 class="card-title"><%= currentUser.username %></h5>
                    <p class="card-text text-muted"><%= currentUser.email %></p>
                    <a href="/profile" class="btn btn-outline-primary btn-sm">Edit Profile</a>
                </div>
            </div>
            
            <!-- Navigation -->
            <div class="list-group mb-4">
                <a href="/dashboard" class="list-group-item list-group-item-action">
                    <i class="fas fa-home me-2"></i> Home
                </a>
                <a href="/posts" class="list-group-item list-group-item-action">
                    <i class="fas fa-newspaper me-2"></i> Posts
                </a>
                <a href="/messages" class="list-group-item list-group-item-action">
                    <i class="fas fa-envelope me-2"></i> Messages
                </a>
                <a href="/profile" class="list-group-item list-group-item-action active">
                    <i class="fas fa-user me-2"></i> Profile
                </a>
                <a href="/settings" class="list-group-item list-group-item-action">
                    <i class="fas fa-cog me-2"></i> Settings
                </a>
            </div>
        </div>
        
        <div class="col-md-6">
            <!-- Follow list header -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <a href="/profile/<%= user.username %>" class="btn btn-sm btn-outline-secondary me-3">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>
                        <h5 class="mb-0"><%= user.username %>'s <%= listType === 'followers' ? 'Followers' : 'Following' %></h5>
                    </div>
                    
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link <%= listType === 'followers' ? 'active' : '' %>" href="/profile/<%= user.username %>/followers">Followers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= listType === 'following' ? 'active' : '' %>" href="/profile/<%= user.username %>/following">Following</a>
                        </li>
                    </ul>
                </div>
            </div>
            
            <!-- Follow list -->
            <div class="card">
                <div class="list-group list-group-flush">
                    <% if (users && users.length > 0) { %>
                        <% users.forEach(user => { %>
                            <div class="list-group-item">
                                <div class="d-flex align-items-center">
                                    <img src="<%= user.avatar || '/images/default-avatar.png' %>" class="rounded-circle me-3" width="50" height="50" alt="<%= user.username %>">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center">
                                            <h6 class="mb-0"><%= user.username %></h6>
                                            <% if (user.is_verified) { %>
                                                <i class="fas fa-check-circle text-primary ms-1"></i>
                                            <% } %>
                                        </div>
                                        <p class="text-muted mb-0 small"><%= user.bio || '' %></p>
                                    </div>
                                    <% if (currentUser.id !== user.id) { %>
                                        <button onclick="toggleFollow('<%= user.id %>', this)" class="btn btn-sm <%= user.is_following ? 'btn-primary' : 'btn-outline-primary' %>">
                                            <%= user.is_following ? 'Following' : 'Follow' %>
                                        </button>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-user-friends mb-3" style="font-size: 3rem; color: #ddd;"></i>
                            <h5>No <%= listType %> yet</h5>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <!-- Suggestions -->
            <div class="card mb-4">
                <div class="card-header">
                    Who to follow
                </div>
                <div class="card-body p-0">
                    <div id="suggestedUsers">
                        <div class="text-center py-3">
                            <div class="spinner-border spinner-border-sm text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const currentUserId = "<%= currentUser.id %>";
    
    async function toggleFollow(userId, button) {
        try {
            const isFollowing = button.classList.contains('btn-primary');
            
            const response = await fetch(`/api/users/${userId}/follow`, {
                method: isFollowing ? 'DELETE' : 'POST'
            });

            if (response.ok) {
                button.classList.toggle('btn-primary');
                button.classList.toggle('btn-outline-primary');
                button.textContent = isFollowing ? 'Follow' : 'Following';
            }
        } catch (err) {
            console.error('Follow error:', err);
        }
    }
</script>
<script src="/js/suggestions.js"></script>
</body>
</html>